<!-- Login page of users -->

<% layout("/layouts/boilerplate")-%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on WanderLust</h1>
</div>
<div class="row   mt-3 ">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">usename</label>
                <input name="username" id="username" type="text" class="form-control" required maxlength="50">
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="text" class="form-control" required maxlength="50">
               
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="text" class="form-control" required maxlength="50">
               
            </div>
<button class="btn btn-danger"> Signup</button>

        </form>
        </div>
        </div>
