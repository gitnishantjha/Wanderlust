<% layout("/layouts/boilerplate")-%>

    <body>
        <h3>All Lisitings</h3>
        <!-- <form method="GET" action="/listings/new">
        <button>Create New List</button>
    </form> -->
        <!--"row-cols-lg-3 AND row-col-md-3" row and col pe large or medium size screen pe 3 cards dikhaye de -->
        <div class="row row-cols-lg-3  row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings){%>

                <a href="/listings/<%=listing._id%>" class="listing-link">

                    <div class="card col listing-card">
                       
                        <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <!-- card img overlay is used when we want to add some text on our cards -->
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                              <b> <%=listing.title%></b>
                              <br>
                                    
                              &#8377; <%= listing.price.toLocaleString("en-IN") %>
                            
                                   
                            </p>

                        </div>
                        
                    </div>
                </a>
                <%}%>
        </div>








    </body>