<% layout ("/layouts/boilerplate")%>
   
      <div class="row">
        <div class="col-8 offset-2 mt-3">
            <br>
            <h3>Edit your Listing</h3>
            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required/>
                <div class="invalid-feedback">
                    Enter the valid title
                  </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description] type=text" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Enter the small description
                  </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" type="text" value="<%= listing.image%>" class="form-control" >
                
            </div>
    
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter the valid price
                      </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="Country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter the valid country
                      </div>
                </div>
            </div>
    
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
                <div class="invalid-feedback">
                    Enter the valid location
                  </div>
            </div>
            <button class="btn btn-dark edit-btn mt-3">Edit</button>
            <br><br>
         
    
        </form>
        </div>
      </div>
     
       
